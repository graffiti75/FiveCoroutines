<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_ex1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example 1: \nCoroutineScope and WithContext" />

    <Button
        android:id="@+id/id_ex2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example 2: \nTimeout" />

    <Button
        android:id="@+id/id_ex3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example 3: \nInvokeOnCompletion" />

    <Button
        android:id="@+id/id_ex4_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example 4: \nAsync and Await" />

    <Button
        android:id="@+id/id_ex5_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example 5: \nCoroutine Exception Handler" />
</LinearLayout>